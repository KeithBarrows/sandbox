{
  "ZipCodes": [ "33440", "32141", "32958", "32720", "33067", "34470", "80520" ], // "65355", "65301"
  "PacingInMinutes": "30",
  "CronJobWeatherDefinition": "*/30 * * * *", // every 30 minutes                                                   //
  "units": "imperial", // imperial=farenheit | metric=celcius | standard=kelvin [default]    //
  "ConnectionStrings": {
    "WeatherConnection": "Server=Peregrine;Database=Weather;Trusted_Connection=True;"
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq.sol3.net:5341",
          "apiKey": "none",
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Verbose"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
    "Properties": {
      "Environment": "LocalDev"
    }
  }
}
